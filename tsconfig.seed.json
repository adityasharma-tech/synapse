{
    "compilerOptions": {
        "target": "ES6",
        "jsx": "react-jsx",
        "module": "CommonJS",
        "baseUrl": ".",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@pkgs/*": ["./packages/*"]
        }
    },
    "include": ["./scripts/*.ts"],
    "exclude": ["**/dist/*", "commitlint.config.js", "**/eslint.config.js"]
}
